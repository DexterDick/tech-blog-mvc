<div>
    <div>
        <h3>{{title}}</h3>
        <p>Posted by
            {{user.username}}
            on
            {{date_created}}</p>
    </div>
    <div>
        <p>{{contents}}</p>
    </div>
</div>
<div>
    <di></di>
    <div>
        <h3>Comment</h3>
        {{#if logged_in}}
            <form class="comment-form" data-blogid={{id}}>
                <textarea
                    name="comment"
                    id="comment"
                    cols="30"
                    rows="10"
                ></textarea>
                <input type="submit" />
            </form>
        {{/if}}
    </div>
</div>

<script src="/js/comment.js"></script>